<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TableRow
            android:layout_height="13dp"
            android:layout_width="fill_parent"
            android:background="@color/col_jaunemoutarde"

            >

            <TextView
                android:background="@color/col_jaunemoutarde"
                android:text="Coupe d'afrique des Nations 2015"
                android:textColor="@color/col_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                style="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
                android:textSize="16dp" />

            <TextView

                android:text=""
                android:textColor="@color/col_white"

                android:layout_column="1"
                android:textAlignment="gravity"
                style="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title" />
        </TableRow>


        <TableRow
            android:layout_height="13dp"
            android:layout_width="fill_parent"


            >

            <TextView
                android:background="@color/col_vert"
                android:text="Mentions Légales"
                android:textColor="@color/col_white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_column="1"
                style="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
                android:textSize="16dp" />


        </TableRow>
        <TableRow>

            <TextView

                android:text="Editeur : Mbaye Camara"
                android:textColor="@color/col_black"

                android:layout_column="1"
                android:textAlignment="gravity"
                />
        </TableRow>
        <TableRow>

            <TextView

                android:text="Tél : +221 774570097"
                android:textColor="@color/col_black"

                android:layout_column="1"
                android:textAlignment="gravity"
                />
        </TableRow>

        <TableRow>

            <TextView

                android:text="Email : mbayecamara@gmail.com"
                android:textColor="@color/col_black"

                android:layout_column="1"
                android:textAlignment="gravity"
                />
        </TableRow>

        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
            <TextView

                android:text=""
                android:textColor="@color/col_black"

                android:layout_column="1"
                android:textAlignment="gravity"
                />
        </TableRow>


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:src="@drawable/ic_logocan"/>


    </TableLayout>



</LinearLayout>